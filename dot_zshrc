# ~/.zshrc

# enable interactive comments
setopt interactivecomments

# enable colors and change prompt
autoload -U colors && colors

# basics
setopt AUTO_CD
setopt EXTENDED_GLOB
setopt NOTIFY

# history
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt SHARE_HISTORY # keep between sessions
setopt EXTENDED_HISTORY # add timestamps
setopt HIST_IGNORE_ALL_DUPS # don't record duplicates

# do nothing if not running interactively
[[ $- != *i* ]] && return

# enable completion
autoload -Uz compinit
compinit

# tab completion config
zstyle ':completion:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'

# aliases
if [[ "$(uname)" == "Darwin" ]]; then
  # macOS
  alias ls='ls -G'
else
  # linux
  alias ls='ls --color=auto'
fi
alias grep='grep --color=auto'
alias n="nvim"
alias y="yazi"
alias gaa="git add ."
alias gca="git commit -a"
alias gp="git pull"
alias gpu="git push -u origin"
alias gs="git status"
alias gsw="git switch"
alias gf="git fetch"
alias gm="git merge"
alias vpn="sudo openvpn --config ~/aximcloud/fisher_ecamescasse_pos.ovpn"

# initialize nvm
if [[ -f "/usr/share/nvm/init-nvm.sh" ]]; then
  source /usr/share/nvm/init-nvm.sh
elif [[ -f "$HOME/.nvm/nvm.sh" ]]; then
  source "$HOME/.nvm/nvm.sh"
fi

# path config
# go
export PATH=$PATH:$HOME/go/bin

# default editor
export EDITOR=nvim

# pnpm
export PNPM_HOME="$HOME/Library/pnpm" # macOS default
if [[ "$(uname)" != "Darwin" ]]; then
  export PNPM_HOME="$HOME/.local/share/pnpm" # linux default
fi

case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

# initialize starship
eval "$(starship init zsh)"

# initialize homebrew (macOS only)
if [[ "$(uname)" == "Darwin" ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# system information on startup
if command -v fastfetch &> /dev/null; then
  fastfetch
fi
